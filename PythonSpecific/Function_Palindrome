# Check for palindrome
a=int(input("Enter the number:"))
temp=a
def CheckPalindrome(num):
    #print(num)
    sum=0
    rem=0
    while (num>0):
        rem=num%10
        sum=sum*10+rem
        num=num//10
        #print(num)
    if (temp == sum):
        return 1
    else:
        return 0

result=CheckPalindrome(a)
if result==1:
    print("Entered Number is palindrome")
else:
    print("Entered Number is not palindrome")